<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="rectangle">
            <solid android:color="@color/action_header_border"/>
            <corners android:radius="@dimen/margin_tiny"/>
        </shape>
    </item>
    <item
        android:bottom="@dimen/margin_tiny"
        android:left="@dimen/margin_tiny"
        android:right="@dimen/margin_tiny"
        android:top="@dimen/margin_tiny">
        <shape
            android:shape="rectangle">
            <solid android:color="@color/action_header_footer"/>
            <corners android:radius="@dimen/margin_tiny"/>
        </shape>
    </item>
</layer-list>
