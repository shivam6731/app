<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/ToolbarColoredBackArrow</item>
    </style>

    <style name="ToolbarColoredBackArrow" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="thickness">@dimen/menu_navigation_thickness</item>
        <item name="gapBetweenBars">@dimen/menu_navigation_gap_between_bars</item>
        <item name="barLength">@dimen/menu_navigation_bar_length</item>
    </style>

    <style name="ImageView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">@dimen/margin_default</item>
        <item name="android:contentDescription">@null</item>
    </style>

    <style name="TextView">
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">@dimen/padding_default</item>
        <item name="android:layout_margin">@dimen/margin_small</item>
    </style>

    <style name="TextView.Dark">
        <item name="android:textColor">@color/stop_text_color</item>
    </style>

    <style name="TextView.Dark.Multiline">
        <item name="android:singleLine">false</item>
        <item name="android:layout_margin">@null</item>
    </style>

    <style name="TextView.Title">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/default_title_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView.Title.CashReport">
        <item name="android:textSize">@dimen/default_title_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="TextView.Title.NotBold">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextView.Title.Timer">
        <item name="android:textSize">@dimen/default_timer_size</item>
    </style>

    <style name="TextView.Title.Multiline">
        <item name="android:singleLine">false</item>
    </style>

    <style name="TextView.Title.Multiline.NotBold">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextView.Title.Multiline.NotBold.Address">
        <item name="android:textSize">@dimen/address_description_size</item>
        <item name="android:maxLines">@integer/max_lines_number_address</item>
    </style>

    <style name="TextView.Title.SmallSize">
        <item name="android:textSize">@dimen/schedule_date_text_size</item>
    </style>

    <style name="TextView.Title.Green">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="TextView.Description">
        <item name="android:gravity">center</item>
        <item name="android:singleLine">false</item>
        <item name="android:textSize">@dimen/default_description_size</item>
        <item name="android:layout_margin">@dimen/margin_large</item>
    </style>

    <style name="TextView.Multiline">
        <item name="android:singleLine">false</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="TextView.Italic">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="Button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/default_title_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_margin">@dimen/margin_default</item>
    </style>

    <style name="Button.NotBold">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Button.NotBold.TransparentBackground">
        <item name="android:layout_margin">@null</item>
        <item name="android:layout_marginLeft">@dimen/margin_button_side</item>
        <item name="android:layout_marginRight">@dimen/margin_button_side</item>
        <item name="android:background">@drawable/see_map_btn_background</item>
    </style>

    <style name="ButtonMainAction">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/main_button_background</item>
        <item name="android:padding">@dimen/padding_large</item>
        <item name="android:textSize">@dimen/default_title_size</item>
        <item name="android:textAllCaps">true</item>
    </style>


    <style name="ButtonMainAction.Main">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:clickable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:focusable">false</item>
        <item name="android:background">@null</item>
        <item name="android:drawablePadding">@dimen/padding_default</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="NavigationView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:theme">@style/Theme.AppCompat.Light</item>
    </style>

</resources>
