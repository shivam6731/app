<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <ImageView
        android:id="@+id/image_top_logo"
        style="@style/ImageView"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ninja"/>

    <TextView
        android:id="@+id/txt_start_point"
        style="@style/TextView.Title"
        android:layout_below="@+id/image_top_logo"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/btn_see_map"
        style="@style/Button"
        android:layout_below="@+id/txt_start_point"
        android:drawableLeft="@android:drawable/ic_menu_compass"
        android:text="@string/ready_to_work_see_map"/>

    <TextView
        android:id="@+id/txt_timer"
        style="@style/TextView.Title.Timer"
        android:layout_below="@+id/btn_see_map"
        android:layout_centerHorizontal="true"/>
    <TextView
        style="@style/TextView.Title.Multiline"
        android:layout_below="@+id/txt_timer"
        android:layout_centerHorizontal="true"
        android:text="@string/ready_to_work_time_fet"/>
</RelativeLayout>
