<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    style="@style/CardView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/margin_tiny"
    app:cardElevation="@dimen/card_elevation"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:id="@+id/layout_halal_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:id="@+id/layout_halal_header"
            style="@style/DividerView"
            android:background="@color/green_text_color"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_default"
            android:paddingRight="@dimen/padding_default">

            <ImageView
                android:id="@+id/image_halal_icon"
                style="@style/ImageView"
                android:layout_gravity="center_vertical"
                android:contentDescription="@string/content_description_list_item_action_stop"
                android:src="@drawable/icon_pay_restaurant"/>

            <com.foodpanda.urbanninja.ui.widget.OpenSansTextView
                android:id="@+id/txt_halal_title"
                style="@style/TextView.Title.WithoutPaddingMargin"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>

        <com.foodpanda.urbanninja.ui.widget.OpenSansRegularTextView
            android:id="@+id/txt_halal_description"
            style="@style/TextView.SmallSize"
            android:layout_margin="@dimen/margin_default"
            android:text="@string/task_details_halal"/>

    </LinearLayout>
</android.support.v7.widget.CardView>
