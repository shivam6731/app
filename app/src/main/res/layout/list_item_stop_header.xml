<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/main_background_color"
              android:orientation="vertical">

    <com.foodpanda.urbanninja.ui.widget.OpenSansTextView
        android:id="@+id/txt_order_name"
        style="@style/TextView.Multiline"
        android:layout_gravity="center"
        android:text="@string/stop_list_description"/>

    <com.foodpanda.urbanninja.ui.widget.MontserratTextView
        android:id="@+id/txt_order_description"
        style="@style/TextView.Multiline"
        android:layout_gravity="center"
        android:textAllCaps="true"/>

    <com.foodpanda.urbanninja.ui.widget.OpenSansTextView
        style="@style/TextView.Multiline"
        android:layout_gravity="center"
        android:text="@string/stop_list_description"/>
</LinearLayout>
